    <script>
        // Initialize Supabase client
        const SUPABASE_URL = 'https://ydnxqnbjoshvxteevemc.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InlkbnhxbmJqb3Nodnh0ZWV2ZW1jIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTc2MzI0OTMsImV4cCI6MjA3MzIwODQ5M30.NlaCCnLPSz1mM7AFeSlfZQ78kYEKUMh_Fi-7P_ccs_U';

        let supabaseClient = null;
        let currentUserId = null;
        let isViewingOwnProfile = true;
        let profileUserId = null;
        let currentUserProfile = null;
        let currentViewProfile = null;

        async function initialize() {
            console.log('Starting Profile initialization...');
            
            try {
                // Create Supabase client
                supabaseClient = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY, {
                    auth: {
                        autoRefreshToken: true,
                        persistSession: true,
                        detectSessionInUrl: true
                    }
                });
                console.log('Supabase client created');
                
                // Check session
                const { data: { session }, error } = await supabaseClient.auth.getSession();
                
                if (error) {
                    throw error;
                }
                
                if (!session) {
                    // No session, redirect to login
                    window.location.href = 'login.html';
                    return;
                }
                
                console.log('User authenticated:', session.user.email);
                currentUserId = session.user.id;
                
                // Check if viewing own profile or another user's profile
                const urlParams = new URLSearchParams(window.location.search);
                profileUserId = urlParams.get('user_id');
                
                if (profileUserId) {
                    isViewingOwnProfile = profileUserId === currentUserId;
                } else {
                    profileUserId = currentUserId;
                    isViewingOwnProfile = true;
                }
                
                // Load user profile
                await loadUserProfile();
                
                // Hide loading, show content
                document.getElementById('loading').style.display = 'none';
                document.getElementById('content').style.display = 'block';
                
                // Initialize event listeners
                initializeEventListeners();
                
                // Load initial data
                if (isViewingOwnProfile) {
                    // Load private view data
                    loadMyPulses('drafts');
                    loadMySeries();
                    loadSavedCollection();
                } else {
                    // Load public view data based on user role
                    if (currentViewProfile.role === 'creator') {
                        loadActiveSeries();
                        loadRecentPulses();
                        loadLinkedContent();
                    } else {
                        loadSavedPulses();
                        loadFollowedSeries();
                        loadConnectors();
                    }
                }
                
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('loading-text').textContent = 'Error loading profile. Please refresh.';
                
                // Still show content after delay
                setTimeout(() => {
                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('content').style.display = 'block';
                    initializeEventListeners();
                    showSampleData();
                }, 2000);
            }
        }
        
        async function loadUserProfile() {
            try {
                // Load the profile being viewed
                const { data: profile, error } = await supabaseClient
                    .from('user_profiles')
                    .select('*')
                    .eq('id', profileUserId)
                    .single();
                
                if (error) throw error;
                
                currentViewProfile = profile;
                
                // Update UI with profile data
                document.getElementById('profile-name').textContent = profile.full_name || 'User';
                document.getElementById('profile-username').textContent = `@${profile.username}`;
                
                const initials = getInitials(profile.full_name || profile.email);
                document.getElementById('profile-avatar-initials').textContent = initials;
                document.getElementById('profile-avatar').style.background = 
                    profile.avatar_url ? `url('${profile.avatar_url}') center/cover` : 
                    'linear-gradient(135deg, var(--bantu-blue), var(--warm-gold))';
                
                // Update role badge
                const roleBadge = document.getElementById('profile-role');
                roleBadge.textContent = profile.role === 'admin' ? 'Admin' : 
                                      profile.role === 'creator' ? 'Creator' : 'User';
                roleBadge.className = `profile-role ${profile.role}`;
                
                // Update bio
                if (profile.bio) {
                    document.getElementById('bioContent').textContent = profile.bio;
                    document.getElementById('bioTextarea').value = profile.bio;
                }
                
                // Load current user's profile for header
                if (isViewingOwnProfile) {
                    currentUserProfile = profile;
                    const headerAvatar = document.getElementById('user-avatar-img');
                    const headerInitials = document.getElementById('avatar-initials');
                    
                    headerInitials.textContent = initials;
                    if (profile.avatar_url) {
                        headerAvatar.src = profile.avatar_url;
                        headerAvatar.style.display = 'block';
                        headerInitials.style.display = 'none';
                    }
                }
                
                // Load stats
                await loadProfileStats();
                
            } catch (error) {
                console.error('Error loading profile:', error);
                showToast('Failed to load profile', 'error');
            }
        }
        
        function getInitials(name) {
            if (!name) return 'U';
            return name.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
        }
        
        async function loadProfileStats() {
            try {
                // Get pulses count
                const { data: pulses, error: pulsesError } = await supabaseClient
                    .from('pulses')
                    .select('id', { count: 'exact' })
                    .eq('user_id', profileUserId)
                    .is('deleted_at', null);
                
                if (!pulsesError) {
                    document.getElementById('stat-pulses').textContent = pulses?.length || 0;
                }
                
                // Get series count
                const { data: series, error: seriesError } = await supabaseClient
                    .from('pulse_series')
                    .select('id', { count: 'exact' })
                    .eq('creator_id', profileUserId)
                    .eq('is_archived', false);
                
                if (!seriesError) {
                    document.getElementById('stat-series').textContent = series?.length || 0;
                }
                
                // Note: For followers/following counts, you would need to query your followers table
                // This is a placeholder - update with your actual followers table logic
                
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }
        
        function initializeEventListeners() {
            // Back button
            document.getElementById('backBtn').addEventListener('click', () => {
                window.location.href = 'pulse-feed.html';
            });
            
            // Bio editing
            const editBioBtn = document.getElementById('editBioBtn');
            const cancelBioBtn = document.getElementById('cancelBioBtn');
            const saveBioBtn = document.getElementById('saveBioBtn');
            
            if (isViewingOwnProfile) {
                editBioBtn.style.display = 'block';
                editBioBtn.addEventListener('click', () => {
                    document.getElementById('bioContent').style.display = 'none';
                    document.getElementById('bioEdit').style.display = 'block';
                });
                
                cancelBioBtn.addEventListener('click', () => {
                    document.getElementById('bioEdit').style.display = 'none';
                    document.getElementById('bioContent').style.display = 'block';
                });
                
                saveBioBtn.addEventListener('click', saveBio);
            } else {
                editBioBtn.style.display = 'none';
            }
            
            // Main tabs
            document.querySelectorAll('.tab').forEach(tab => {
                tab.addEventListener('click', function() {
                    document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    document.querySelectorAll('.tab-content').forEach(content => {
                        content.classList.remove('active');
                    });
                    
                    const tabId = this.getAttribute('data-tab');
                    document.getElementById(`${tabId}-tab`).classList.add('active');
                    
                    // Load appropriate data when switching tabs
                    if (tabId === 'public') {
                        showPublicView();
                    } else if (tabId === 'private') {
                        if (isViewingOwnProfile) {
                            showPrivateView();
                        } else {
                            showToast('This view is only available for your own profile', 'error');
                            // Switch back to public tab
                            setTimeout(() => {
                                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                                document.querySelector('.tab[data-tab="public"]').classList.add('active');
                                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                                document.getElementById('public-tab').classList.add('active');
                            }, 100);
                        }
                    }
                });
            });
            
            // Public sub tabs
            document.querySelectorAll('#publicSubTabs .sub-tab').forEach(tab => {
                tab.addEventListener('click', function() {
                    document.querySelectorAll('#publicSubTabs .sub-tab').forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    document.querySelectorAll('.sub-tab-content').forEach(content => {
                        content.classList.remove('active');
                    });
                    
                    const subtabId = this.getAttribute('data-subtab');
                    document.getElementById(`${subtabId}-subtab`).classList.add('active');
                });
            });
            
            // Private sub tabs
            document.querySelectorAll('#privateSubTabs .sub-tab').forEach(tab => {
                tab.addEventListener('click', function() {
                    document.querySelectorAll('#privateSubTabs .sub-tab').forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    document.querySelectorAll('.sub-tab-content').forEach(content => {
                        content.classList.remove('active');
                    });
                    
                    const subtabId = this.getAttribute('data-subtab');
                    document.getElementById(`${subtabId}-subtab`).classList.add('active');
                    
                    // Load data for the subtab
                    if (subtabId === 'mypulses') {
                        loadMyPulses('drafts');
                    } else if (subtabId === 'myseries') {
                        loadMySeries();
                    } else if (subtabId === 'saved') {
                        loadSavedCollection();
                    }
                });
            });
            
            // My Pulses subtabs
            document.querySelectorAll('[data-pulsetab]').forEach(tab => {
                tab.addEventListener('click', function() {
                    document.querySelectorAll('[data-pulsetab]').forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    document.querySelectorAll('.pulse-tab-content').forEach(content => {
                        content.classList.remove('active');
                    });
                    
                    const pulsetab = this.getAttribute('data-pulsetab');
                    document.getElementById(`${pulsetab}-tab`).classList.add('active');
                    
                    loadMyPulses(pulsetab);
                });
            });
            
            // Series modal
            const closeSeriesModal = document.getElementById('closeSeriesModal');
            const cancelSeriesModal = document.getElementById('cancelSeriesModal');
            
            closeSeriesModal.addEventListener('click', () => {
                document.getElementById('seriesModal').style.display = 'none';
            });
            
            cancelSeriesModal.addEventListener('click', () => {
                document.getElementById('seriesModal').style.display = 'none';
            });
            
            // Link modal
            const closeLinkModal = document.getElementById('closeLinkModal');
            const cancelLinkModal = document.getElementById('cancelLinkModal');
            
            closeLinkModal.addEventListener('click', () => {
                document.getElementById('linkModal').style.display = 'none';
            });
            
            cancelLinkModal.addEventListener('click', () => {
                document.getElementById('linkModal').style.display = 'none';
            });
            
            // Listen for auth changes
            supabaseClient.auth.onAuthStateChange((event, session) => {
                console.log(' Auth state changed:', event);
                
                if (event === 'SIGNED_OUT') {
                    window.location.href = 'login.html';
                }
            });
        }
        
        function showPublicView() {
            if (currentViewProfile.role === 'creator') {
                // Show creator profile
                document.querySelector('#publicSubTabs .sub-tab[data-subtab="creator"]').click();
            } else {
                // Show user profile
                document.querySelector('#publicSubTabs .sub-tab[data-subtab="user"]').click();
            }
        }
        
        function showPrivateView() {
            // Default to My Pulses tab
            loadMyPulses('drafts');
        }
        
        async function loadActiveSeries() {
            try {
                const { data: series, error } = await supabaseClient
                    .from('series_with_details')
                    .select('*')
                    .eq('creator_id', profileUserId)
                    .eq('is_completed', false)
                    .eq('is_archived', false)
                    .order('updated_at', { ascending: false });
                
                if (error) throw error;
                
                const container = document.getElementById('activeSeriesList');
                const emptyState = document.getElementById('emptyActiveSeries');
                
                if (!series || series.length === 0) {
                    emptyState.style.display = 'block';
                    container.innerHTML = '';
                    return;
                }
                
                emptyState.style.display = 'none';
                container.innerHTML = '';
                
                series.forEach(s => {
                    const seriesElement = document.createElement('div');
                    seriesElement.className = 'series-card card';
                    seriesElement.style.cursor = 'pointer';
                    seriesElement.innerHTML = `
                        <div class="series-cover" style="${s.cover_image_url ? `background-image: url('${s.cover_image_url}'); background-size: cover;` : ''}">
                            ${s.cover_image_url ? '' : `<i class="fas fa-book"></i>`}
                        </div>
                        <div class="card-title">${s.title || 'Untitled Series'}</div>
                        <div class="card-subtitle">${s.description || 'No description'}</div>
                        <div class="series-meta">
                            <span>${s.pulse_count || 0} parts</span>
                            <span>${s.current_part || 0}/${s.total_parts || ''}</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: ${Math.min((s.current_part || 0) / (s.total_parts || 1) * 100, 100)}%"></div>
                        </div>
                    `;
                    
                    seriesElement.addEventListener('click', () => {
                        viewSeries(s.id);
                    });
                    
                    container.appendChild(seriesElement);
                });
                
            } catch (error) {
                console.error('Error loading active series:', error);
                showToast('Failed to load series', 'error');
            }
        }
        
        async function loadRecentPulses() {
            try {
                const { data: pulses, error } = await supabaseClient
                    .from('pulses_with_user_details')
                    .select('*')
                    .eq('user_id', profileUserId)
                    .order('created_at', { ascending: false })
                    .limit(5);
                
                if (error) throw error;
                
                const container = document.getElementById('recentPulsesList');
                
                if (!pulses || pulses.length === 0) {
                    container.innerHTML = `
                        <div class="empty-state" style="padding: 20px;">
                            <div class="empty-icon">
                                <i class="fas fa-bullhorn"></i>
                            </div>
                            <div class="empty-title">No Pulses Yet</div>
                            <div class="empty-description">
                                Start sharing cultural moments.
                            </div>
                        </div>
                    `;
                    return;
                }
                
                container.innerHTML = '';
                
                pulses.forEach(pulse => {
                    const pulseElement = document.createElement('div');
                    pulseElement.className = 'mini-pulse-card';
                    pulseElement.innerHTML = `
                        <div class="mini-pulse-avatar">
                            ${getInitials(pulse.full_name || pulse.email)}
                        </div>
                        <div class="mini-pulse-content">
                            <div class="mini-pulse-text">${pulse.caption ? (pulse.caption.length > 60 ? pulse.caption.substring(0, 60) + '...' : pulse.caption) : 'No caption'}</div>
                            <div class="mini-pulse-time">${formatTimeAgo(new Date(pulse.created_at))}</div>
                        </div>
                        <div class="mini-pulse-stats">
                            <span><i class="fas fa-heart"></i> ${pulse.likes_count || 0}</span>
                            <span><i class="fas fa-comment"></i> ${pulse.comments_count || 0}</span>
                        </div>
                    `;
                    
                    pulseElement.addEventListener('click', () => {
                        viewPulse(pulse.id);
                    });
                    
                    container.appendChild(pulseElement);
                });
                
            } catch (error) {
                console.error('Error loading recent pulses:', error);
                showToast('Failed to load pulses', 'error');
            }
        }
        
        async function loadLinkedContent() {
            try {
                const { data: pulses, error } = await supabaseClient
                    .from('pulses_with_user_details')
                    .select('*')
                    .eq('user_id', profileUserId)
                    .not('linked_content_id', 'is', null)
                    .order('created_at', { ascending: false })
                    .limit(5);
                
                if (error) throw error;
                
                const container = document.getElementById('linkedContentList');
                const emptyState = document.getElementById('emptyLinkedContent');
                
                if (!pulses || pulses.length === 0) {
                    emptyState.style.display = 'block';
                    container.innerHTML = '';
                    return;
                }
                
                emptyState.style.display = 'none';
                container.innerHTML = '';
                
                pulses.forEach(pulse => {
                    const contentElement = document.createElement('div');
                    contentElement.className = 'mini-pulse-card';
                    contentElement.innerHTML = `
                        <div class="mini-pulse-avatar">
                            <i class="fas fa-${pulse.linked_content_type === 'music' ? 'music' : pulse.linked_content_type === 'film' ? 'film' : 'podcast'}"></i>
                        </div>
                        <div class="mini-pulse-content">
                            <div class="mini-pulse-text">${pulse.caption || 'Linked content'}</div>
                            <div class="mini-pulse-time">${formatTimeAgo(new Date(pulse.created_at))}</div>
                        </div>
                    `;
                    
                    contentElement.addEventListener('click', () => {
                        viewLinkedContent(pulse.linked_content_id);
                    });
                    
                    container.appendChild(contentElement);
                });
                
            } catch (error) {
                console.error('Error loading linked content:', error);
            }
        }
        
        async function loadSavedPulses() {
            try {
                // This would need a saved_pulses table
                // For now, we'll show a placeholder
                const container = document.getElementById('savedPulsesList');
                container.innerHTML = `
                    <div class="empty-state" style="padding: 20px;">
                        <div class="empty-icon">
                            <i class="fas fa-bookmark"></i>
                        </div>
                        <div class="empty-title">No Saved Pulses</div>
                        <div class="empty-description">
                            Save pulses to view them here.
                        </div>
                    </div>
                `;
                
            } catch (error) {
                console.error('Error loading saved pulses:', error);
            }
        }
        
        async function loadFollowedSeries() {
            try {
                // This would need a series_follows table
                // For now, we'll show a placeholder
                const container = document.getElementById('followedSeriesList');
                const emptyState = document.getElementById('emptyFollowedSeries');
                emptyState.style.display = 'block';
                container.innerHTML = '';
                
            } catch (error) {
                console.error('Error loading followed series:', error);
            }
        }
        
        async function loadConnectors() {
            try {
                const { data: connectors, error } = await supabaseClient
                    .from('connectors')
                    .select(`
                        *,
                        connector:user_profiles!connectors_connector_id_fkey(*),
                        connected:user_profiles!connectors_connected_id_fkey(*)
                    `)
                    .or(`connector_id.eq.${profileUserId},connected_id.eq.${profileUserId}`)
                    .limit(8);
                
                if (error) throw error;
                
                const container = document.getElementById('connectorsList');
                const emptyState = document.getElementById('emptyConnectors');
                
                if (!connectors || connectors.length === 0) {
                    emptyState.style.display = 'block';
                    container.innerHTML = '';
                    return;
                }
                
                emptyState.style.display = 'none';
                container.innerHTML = '';
                
                // Get unique users from connectors
                const users = new Map();
                connectors.forEach(connector => {
                    if (connector.connector && connector.connector.id !== profileUserId) {
                        users.set(connector.connector.id, connector.connector);
                    }
                    if (connector.connected && connector.connected.id !== profileUserId) {
                        users.set(connector.connected.id, connector.connected);
                    }
                });
                
                Array.from(users.values()).slice(0, 8).forEach(user => {
                    const connectorElement = document.createElement('div');
                    connectorElement.className = 'connector-item';
                    connectorElement.innerHTML = `
                        <div class="connector-avatar">
                            ${getInitials(user.full_name || user.email)}
                        </div>
                        <div class="connector-name">${user.full_name || 'User'}</div>
                        <div class="connector-type">${user.role || 'User'}</div>
                    `;
                    
                    connectorElement.addEventListener('click', () => {
                        window.location.href = `profile.html?user_id=${user.id}`;
                    });
                    
                    container.appendChild(connectorElement);
                });
                
            } catch (error) {
                console.error('Error loading connectors:', error);
            }
        }
        
        async function loadMyPulses(type) {
            try {
                let query = supabaseClient
                    .from('pulses')
                    .select('*')
                    .eq('user_id', currentUserId);
                
                // Apply filters based on type
                if (type === 'drafts') {
                    query = query.is('deleted_at', null).is('published_at', null);
                } else if (type === 'published') {
                    query = query.is('deleted_at', null).not('published_at', 'is', null);
                } else if (type === 'archived') {
                    query = query.not('deleted_at', 'is', null);
                }
                
                query = query.order('created_at', { ascending: false });
                
                const { data: pulses, error } = await query;
                
                if (error) throw error;
                
                const container = document.getElementById(`${type}List`);
                const emptyState = document.getElementById(`empty${type.charAt(0).toUpperCase() + type.slice(1)}`);
                
                // Update stats
                updatePulseStats(pulses || []);
                
                if (!pulses || pulses.length === 0) {
                    if (emptyState) emptyState.style.display = 'block';
                    container.innerHTML = '';
                    return;
                }
                
                if (emptyState) emptyState.style.display = 'none';
                container.innerHTML = '';
                
                pulses.forEach(pulse => {
                    const pulseElement = document.createElement('div');
                    pulseElement.className = 'mini-pulse-card';
                    pulseElement.innerHTML = `
                        <div class="mini-pulse-avatar">
                            ${getInitials(currentUserProfile?.full_name || currentUserProfile?.email)}
                        </div>
                        <div class="mini-pulse-content">
                            <div class="mini-pulse-text">${pulse.caption ? (pulse.caption.length > 60 ? pulse.caption.substring(0, 60) + '...' : pulse.caption) : 'No caption'}</div>
                            <div class="mini-pulse-time">${formatTimeAgo(new Date(pulse.created_at))}</div>
                            <div class="mini-pulse-stats">
                                <span><i class="fas fa-heart"></i> ${pulse.likes_count || 0}</span>
                                <span><i class="fas fa-comment"></i> ${pulse.comments_count || 0}</span>
                            </div>
                        </div>
                        <div class="actions-row">
                            ${type === 'drafts' ? `
                                <button class="btn btn-small btn-primary" onclick="editPulse('${pulse.id}')">
                                    <i class="fas fa-edit"></i>
                                </button>
                            ` : ''}
                            <button class="btn btn-small btn-${type === 'archived' ? 'primary' : 'secondary'}" 
                                    onclick="${type === 'archived' ? `restorePulse('${pulse.id}')` : `archivePulse('${pulse.id}')`}">
                                <i class="fas fa-${type === 'archived' ? 'redo' : 'archive'}"></i>
                            </button>
                        </div>
                    `;
                    
                    pulseElement.addEventListener('click', () => {
                        viewPulse(pulse.id);
                    });
                    
                    container.appendChild(pulseElement);
                });
                
            } catch (error) {
                console.error(`Error loading ${type} pulses:`, error);
                showToast(`Failed to load ${type} pulses`, 'error');
            }
        }
        
        async function loadMySeries() {
            try {
                const { data: series, error } = await supabaseClient
                    .from('series_with_details')
                    .select('*')
                    .eq('creator_id', currentUserId)
                    .order('updated_at', { ascending: false });
                
                if (error) throw error;
                
                const container = document.getElementById('mySeriesList');
                const emptyState = document.getElementById('emptyMySeries');
                
                if (!series || series.length === 0) {
                    emptyState.style.display = 'block';
                    container.innerHTML = '';
                    return;
                }
                
                emptyState.style.display = 'none';
                container.innerHTML = '';
                
                series.forEach(s => {
                    const seriesElement = document.createElement('div');
                    seriesElement.className = 'series-card card';
                    seriesElement.innerHTML = `
                        <div class="series-cover" style="${s.cover_image_url ? `background-image: url('${s.cover_image_url}'); background-size: cover;` : ''}">
                            ${s.cover_image_url ? '' : `<i class="fas fa-book"></i>`}
                        </div>
                        <div class="card-header">
                            <div class="card-title">${s.title || 'Untitled Series'}</div>
                            <div class="actions-row">
                                <button class="btn btn-small btn-primary" onclick="manageSeries('${s.id}')">
                                    <i class="fas fa-cog"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-subtitle">${s.description || 'No description'}</div>
                        <div class="series-meta">
                            <span>${s.pulse_count || 0} parts</span>
                            <span>${s.is_completed ? 'Completed' : 'Active'}</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: ${Math.min((s.current_part || 0) / (s.total_parts || 1) * 100, 100)}%"></div>
                        </div>
                    `;
                    
                    seriesElement.addEventListener('click', () => {
                        viewSeries(s.id);
                    });
                    
                    container.appendChild(seriesElement);
                });
                
            } catch (error) {
                console.error('Error loading my series:', error);
                showToast('Failed to load series', 'error');
            }
        }
        
        async function loadSavedCollection() {
            try {
                // This would query your saved_pulses table
                // For now, we'll show a placeholder
                const container = document.getElementById('savedCollectionList');
                container.innerHTML = `
                    <div class="empty-state" style="padding: 20px;">
