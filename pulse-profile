            }
        }
        
        function updatePulseStats(pulses) {
            const total = pulses.length;
            const drafts = pulses.filter(p => !p.published_at && !p.deleted_at).length;
            const published = pulses.filter(p => p.published_at && !p.deleted_at).length;
            const archived = pulses.filter(p => p.deleted_at).length;
            
            document.getElementById('total-pulses').textContent = total;
            document.getElementById('draft-pulses').textContent = drafts;
            document.getElementById('published-pulses').textContent = published;
            document.getElementById('archived-pulses').textContent = archived;
        }
        
        async function saveBio() {
            try {
                const bioText = document.getElementById('bioTextarea').value;
                
                const { error } = await supabaseClient
                    .from('user_profiles')
                    .update({ 
                        bio: bioText,
                        updated_at: new Date().toISOString()
                    })
                    .eq('id', currentUserId);
                
                if (error) throw error;
                
                document.getElementById('bioContent').textContent = bioText;
                document.getElementById('bioEdit').style.display = 'none';
                document.getElementById('bioContent').style.display = 'block';
                
                showToast('Bio updated successfully', 'success');
                
            } catch (error) {
                console.error('Error saving bio:', error);
                showToast('Failed to save bio', 'error');
            }
        }
        
        function createSeries() {
            document.getElementById('seriesModalTitle').textContent = 'Create New Series';
            document.getElementById('seriesName').value = '';
            document.getElementById('seriesDescription').value = '';
            document.getElementById('seriesCover').value = '';
            document.querySelector('input[name="seriesStatus"][value="active"]').checked = true;
            document.getElementById('seriesPulsesSection').style.display = 'none';
            document.getElementById('deleteSeriesModal').style.display = 'none';
            
            document.getElementById('seriesModal').style.display = 'flex';
        }
        
        async function manageSeries(seriesId) {
            try {
                const { data: series, error } = await supabaseClient
                    .from('pulse_series')
                    .select('*')
                    .eq('id', seriesId)
                    .single();
                
                if (error) throw error;
                
                document.getElementById('seriesModalTitle').textContent = 'Manage Series';
                document.getElementById('seriesName').value = series.title || '';
                document.getElementById('seriesDescription').value = series.description || '';
                document.getElementById('seriesCover').value = series.cover_image_url || '';
                document.querySelector(`input[name="seriesStatus"][value="${series.is_completed ? 'completed' : series.is_archived ? 'archived' : 'active'}"]`).checked = true;
                
                // Load series pulses
                await loadSeriesPulses(seriesId);
                document.getElementById('seriesPulsesSection').style.display = 'block';
                document.getElementById('deleteSeriesModal').style.display = 'block';
                document.getElementById('deleteSeriesModal').dataset.seriesId = seriesId;
                
                document.getElementById('seriesModal').style.display = 'flex';
                
            } catch (error) {
                console.error('Error loading series:', error);
                showToast('Failed to load series', 'error');
            }
        }
        
        async function loadSeriesPulses(seriesId) {
            try {
                const { data: pulses, error } = await supabaseClient
                    .from('pulse_series_items')
                    .select(`
                        *,
                        pulse:pulses(*)
                    `)
                    .eq('series_id', seriesId)
                    .order('sequence_order');
                
                if (error) throw error;
                
                const container = document.getElementById('seriesPulsesList');
                container.innerHTML = '';
                
                if (pulses && pulses.length > 0) {
                    pulses.forEach(item => {
                        const pulseElement = document.createElement('div');
                        pulseElement.className = 'mini-pulse-card';
                        pulseElement.innerHTML = `
                            <div class="mini-pulse-avatar">
                                ${getInitials(currentUserProfile?.full_name || currentUserProfile?.email)}
                            </div>
                            <div class="mini-pulse-content">
                                <div class="mini-pulse-text">${item.pulse?.caption ? (item.pulse.caption.length > 40 ? item.pulse.caption.substring(0, 40) + '...' : item.pulse.caption) : 'Pulse ' + item.sequence_order}</div>
                                <div class="mini-pulse-time">Part ${item.sequence_order}</div>
                            </div>
                            <div class="actions-row">
                                <button class="btn btn-small btn-danger" onclick="removeFromSeries('${item.id}', '${seriesId}')">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        `;
                        container.appendChild(pulseElement);
                    });
                } else {
                    container.innerHTML = `
                        <div class="empty-state" style="padding: 10px;">
                            <div class="empty-description">No pulses in this series yet.</div>
                        </div>
                    `;
                }
                
            } catch (error) {
                console.error('Error loading series pulses:', error);
            }
        }
        
        async function saveSeries() {
            try {
                const title = document.getElementById('seriesName').value;
                const description = document.getElementById('seriesDescription').value;
                const coverImageUrl = document.getElementById('seriesCover').value;
                const status = document.querySelector('input[name="seriesStatus"]:checked').value;
                
                const seriesData = {
                    title,
                    description,
                    cover_image_url: coverImageUrl || null,
                    is_completed: status === 'completed',
                    is_archived: status === 'archived',
                    updated_at: new Date().toISOString()
                };
                
                if (document.getElementById('seriesModalTitle').textContent === 'Create New Series') {
                    seriesData.creator_id = currentUserId;
                    
                    const { data, error } = await supabaseClient
                        .from('pulse_series')
                        .insert(seriesData)
                        .select()
                        .single();
                    
                    if (error) throw error;
                    
                    showToast('Series created successfully', 'success');
                } else {
                    // Update existing series
                    const { error } = await supabaseClient
                        .from('pulse_series')
                        .update(seriesData)
                        .eq('creator_id', currentUserId);
                    
                    if (error) throw error;
                    
                    showToast('Series updated successfully', 'success');
                }
                
                document.getElementById('seriesModal').style.display = 'none';
                
                // Refresh series list
                if (isViewingOwnProfile) {
                    loadMySeries();
                } else {
                    loadActiveSeries();
                }
                
            } catch (error) {
                console.error('Error saving series:', error);
                showToast('Failed to save series', 'error');
            }
        }
        
        async function deleteSeries() {
            const seriesId = document.getElementById('deleteSeriesModal').dataset.seriesId;
            
            if (!confirm('Are you sure you want to delete this series? This action cannot be undone.')) {
                return;
            }
            
            try {
                const { error } = await supabaseClient
                    .from('pulse_series')
                    .update({ is_archived: true })
                    .eq('id', seriesId)
                    .eq('creator_id', currentUserId);
                
                if (error) throw error;
                
                showToast('Series archived successfully', 'success');
                document.getElementById('seriesModal').style.display = 'none';
                
                // Refresh series list
                loadMySeries();
                
            } catch (error) {
                console.error('Error deleting series:', error);
                showToast('Failed to delete series', 'error');
            }
        }
        
        function linkNewContent() {
            document.getElementById('linkModal').style.display = 'flex';
        }
        
        async function saveLinkedContent() {
            try {
                const contentType = document.getElementById('contentType').value;
                const contentTitle = document.getElementById('contentTitle').value;
                const contentUrl = document.getElementById('contentUrl').value;
                const contentDescription = document.getElementById('contentDescription').value;
                
                // This would create a pulse with linked content
                const { error } = await supabaseClient
                    .from('pulses')
                    .insert({
                        user_id: currentUserId,
                        caption: contentDescription,
                        linked_content_type: contentType,
                        media_url: contentUrl,
                        media_type: 'none',
                        created_at: new Date().toISOString()
                    });
                
                if (error) throw error;
                
                showToast('Content linked successfully', 'success');
                document.getElementById('linkModal').style.display = 'none';
                
                // Refresh linked content list
                loadLinkedContent();
                
            } catch (error) {
                console.error('Error linking content:', error);
                showToast('Failed to link content', 'error');
            }
        }
        
        function viewPulse(pulseId) {
            // Navigate to pulse detail view or open modal
            showToast('Opening pulse...', 'success');
            // window.location.href = `pulse.html?id=${pulseId}`;
        }
        
        function viewSeries(seriesId) {
            // Navigate to series detail view
            showToast('Opening series...', 'success');
            // window.location.href = `series.html?id=${seriesId}`;
        }
        
        function viewLinkedContent(contentId) {
            // Open linked content
            showToast('Opening content...', 'success');
        }
        
        function editPulse(pulseId) {
            // Navigate to pulse editor
            window.location.href = `create-pulse.html?edit=${pulseId}`;
        }
        
        async function archivePulse(pulseId) {
            try {
                const { error } = await supabaseClient
                    .from('pulses')
                    .update({ deleted_at: new Date().toISOString() })
                    .eq('id', pulseId)
                    .eq('user_id', currentUserId);
                
                if (error) throw error;
                
                showToast('Pulse archived', 'success');
                loadMyPulses('published');
                
            } catch (error) {
                console.error('Error archiving pulse:', error);
                showToast('Failed to archive pulse', 'error');
            }
        }
        
        async function restorePulse(pulseId) {
            try {
                const { error } = await supabaseClient
                    .from('pulses')
                    .update({ deleted_at: null })
                    .eq('id', pulseId)
                    .eq('user_id', currentUserId);
                
                if (error) throw error;
                
                showToast('Pulse restored', 'success');
                loadMyPulses('archived');
                
            } catch (error) {
                console.error('Error restoring pulse:', error);
                showToast('Failed to restore pulse', 'error');
            }
        }
        
        function createNewPulse() {
            window.location.href = 'create-pulse.html';
        }
        
        function formatTimeAgo(date) {
            const seconds = Math.floor((new Date() - date) / 1000);
            
            let interval = seconds / 31536000;
            if (interval > 1) return Math.floor(interval) + 'y';
            
            interval = seconds / 2592000;
            if (interval > 1) return Math.floor(interval) + 'mo';
            
            interval = seconds / 86400;
            if (interval > 1) return Math.floor(interval) + 'd';
            
            interval = seconds / 3600;
            if (interval > 1) return Math.floor(interval) + 'h';
            
            interval = seconds / 60;
            if (interval > 1) return Math.floor(interval) + 'm';
            
            return Math.floor(seconds) + 's';
        }
        
        function showToast(message, type = 'error') {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                <span>${message}</span>
            `;
            
            const container = document.getElementById('toast-container');
            container.appendChild(toast);
            
            setTimeout(() => {
                toast.style.opacity = '0';
                toast.style.transform = 'translateX(100%)';
                setTimeout(() => toast.remove(), 300);
            }, 4000);
        }
        
        function showSampleData() {
            // Show sample data for demo purposes
            document.getElementById('profile-name').textContent = 'Sample User';
            document.getElementById('profile-username').textContent = '@sampleuser';
            document.getElementById('profile-role').textContent = 'Creator';
            
            if (isViewingOwnProfile) {
                // Show private view with sample data
                document.querySelector('.tab[data-tab="private"]').click();
            } else {
                // Show public view with sample data
                showPublicView();
            }
        }
        
        // Set up modal save buttons
        document.getElementById('saveSeriesModal').addEventListener('click', saveSeries);
        document.getElementById('deleteSeriesModal').addEventListener('click', deleteSeries);
        document.getElementById('saveLinkModal').addEventListener('click', saveLinkedContent);
        
        // Start initialization
        document.addEventListener('DOMContentLoaded', initialize);
    </script>
</body>
